
@namespace MyPlans.Components.PlansComponents
@* View Selector *@


<MudIconButton Icon="@Icons.Material.Filled.TableView" Disabled= "@(!_isCardsViewEnabled)" OnClick="SetTableView"></MudIconButton>
<MudIconButton Icon="@Icons.Material.Filled.GridView" Disabled="_isCardsViewEnabled" OnClick="SetCardView"></MudIconButton>

<div class="mt-4" />
@if (_isCardsViewEnabled)
{
    <PlanCardsView FetchPlans="GetPlansAsync" OnEditClicked="EditPlan" OnDeleteClicked="DeletePlanAsync"/>
}
else
{
    <TableView OnEditClicked="EditPlan" OnDeleteClicked="DeletePlanAsync"/>
}

